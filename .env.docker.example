# Example environment file for Docker deployment
# Copy this to .env and customize as needed
# Docker Compose will use these values to override docker-compose.yml defaults

# IMPORTANT: For Docker deployment, keep database credentials as postgres/postgres
# The Ansible/Vagrant deployment uses different credentials in .env.ansible

# Django Settings
DEBUG=True
SECRET_KEY=your-secret-key-here
ALLOWED_HOSTS=localhost,127.0.0.1

# Database (Keep these as postgres/postgres for Docker!)
DB_NAME=healthcare_db
DB_USER=postgres
DB_PASSWORD=postgres
DB_HOST=db
DB_PORT=5432

# Redis
REDIS_URL=redis://redis:6379/0

# RabbitMQ
CELERY_BROKER_URL=amqp://guest:guest@rabbitmq:5672//
CELERY_RESULT_BACKEND=redis://redis:6379/1

# CORS
CORS_ALLOWED_ORIGINS=http://localhost,http://localhost:80,http://localhost:3000

# AI Features (Optional - required for AI chat functionality)
OPENAI_API_KEY=your-openai-api-key-here
