# Django Settings
DEBUG={{ django_debug | default('False') }}
SECRET_KEY={{ django_secret_key }}
ALLOWED_HOSTS={{ django_allowed_hosts }}

# Database
DB_NAME={{ db_name }}
DB_USER={{ db_user }}
DB_PASSWORD={{ db_password }}
DB_HOST={{ db_host }}
DB_PORT={{ db_port }}

# Redis
REDIS_URL={{ redis_url }}

# RabbitMQ
CELERY_BROKER_URL=amqp://{{ rabbitmq_user }}:{{ rabbitmq_password | urlencode }}@localhost:5672/{{ rabbitmq_vhost }}
CELERY_RESULT_BACKEND={{ celery_result_backend }}

# CORS
CORS_ALLOWED_ORIGINS={{ cors_allowed_origins }}
